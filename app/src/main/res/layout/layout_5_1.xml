<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/n1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/n3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/n3"
        ></Button>
    <TextView
        android:id="@+id/n2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/n4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/n1"
        ></TextView>
    <ImageView
        android:id="@+id/n3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:background="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/n1"
        app:layout_constraintRight_toRightOf="parent"
        ></ImageView>
    <ImageButton
        android:id="@+id/n4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/n5"
        app:layout_constraintBottom_toTopOf="@id/n2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/n1"
        ></ImageButton>
    <EditText
        android:id="@+id/n5"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/n3"
        app:layout_constraintBottom_toTopOf="@id/n6"
        app:layout_constraintRight_toRightOf="parent"
        ></EditText>
    <VideoView
        android:id="@+id/n6"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/n5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></VideoView>

</androidx.constraintlayout.widget.ConstraintLayout>